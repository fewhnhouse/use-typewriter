{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "allowJs": false,
      "module": "esnext",
      "declaration": true,
      "outDir": "./build",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "removeComments": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "build"]
  }